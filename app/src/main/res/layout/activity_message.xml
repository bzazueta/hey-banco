<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".NoticesActivity">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/back"
        android:background="@drawable/border_radius"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvHeybanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="italic"
        android:text="Hey Banco"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVisit"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:text="Mensajes"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvHeybanco"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/home_border_radius"
        />

    <ImageView
        android:id="@+id/ivCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/img_messages"
        android:layout_marginStart="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeybanco"
        />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:padding="16dp"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:text="Mensaje 1"
        app:layout_constraintTop_toBottomOf="@+id/ivCircle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_radius"
        />

    <Button
        android:id="@+id/btnSee"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="ver"
        android:textSize="13sp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/border_radius"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCircle"
        />

    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:text="Mensaje 2"
        app:layout_constraintTop_toBottomOf="@+id/btnSee"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_radius"
        />

    <TextView
        android:id="@+id/tvMessageSolved"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="80dp"
        android:padding="5dp"
        android:textSize="17sp"
        android:textStyle="italic"
        android:textColor="@color/solved"
        android:text="@string/true_tick"
        app:layout_constraintTop_toBottomOf="@+id/btnSee"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_radius_invisible"
        />


    <TextView
        android:id="@+id/tvMessage3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:text="Mensaje 3"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_radius"
        />

    <Button
        android:id="@+id/btnSee3"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="ver"
        android:textSize="13sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/border_radius"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage2"
        />
    <TextView
        android:id="@+id/tvMessage4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:text="Mensaje 4"
        app:layout_constraintTop_toBottomOf="@+id/btnSee3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_radius"
        />

    <Button
        android:id="@+id/btnSee4"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="ver"
        android:textSize="13sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/border_radius"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSee3"
        />



</androidx.constraintlayout.widget.ConstraintLayout>